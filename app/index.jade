html(lang='en', data-ng-app='myApp')
head
    meta(charset='utf-8')
    title Angular Auth Example
    link(rel='stylesheet', href='css/app.css')
    link(href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css", rel="stylesheet")
    body(data-ng-controller="AppCtrl")
        ul.nav.nav-tabs(data-ng-controller="MenuCtrl")
            li(data-ng-show="showMenuItem(accessLevels.anon)", data-ng-class='{active: activeNavItem=="login"}')
                a(href='/login') Log in
            li(data-ng-show="showMenuItem(accessLevels.anon)", data-ng-class='{active: activeNavItem=="register"}')
                a(href='/register') Register
            li(data-ng-show="showMenuItem(accessLevels.user)", data-ng-class='{active: activeNavItem=="home"}')
                a(href='/') Home
            li(data-ng-show="showMenuItem(accessLevels.user)", data-ng-class='{active: activeNavItem=="private"}')
                a(href='/private') Private
            li(data-ng-show="showMenuItem(accessLevels.admin)", data-ng-class='{active: activeNavItem=="admin"}')
                a(href='/admin') Admin
            li(data-ng-show="showMenuItem(accessLevels.user)")
                button.btn-link.logout-button(ng-click="logout()")
                    | Log out
        .container
            div(data-ng-view='ng-view')
            span(data-ng-bind="userRole")
            div(data-ng-bind="error")

        script(src='lib/angular/angular.js')
        script(src='lib/angular/angular-cookies.js')
        script(src='js/app.js')
        script(src='js/services.js')
        script(src='js/controllers.js')
        script(src='js/filters.js')
        script(src='js/directives.js')

h1 Register
form.form-horizontal(ng-submit="register()", name="registerForm")
    .control-group
        label.control-label(for="username") Username
        .controls
            input(type="text", ng-model="username", placeholder="Username", name="username", required)
    .control-group
        label.control-label(for="password") Password
        .controls
            input(type="password", ng-model="password", placeholder="Password", name="password", required)
    .control-group
        label.radio.inline
            input(type="radio", name="role", ng-model="role", id="adminRole", ng-value="{{ userRoles.admin }}")
            | Administrator
        label.radio.inline
            input(type="radio", name="role", ng-model="role", id="adminRole", ng-value="{{ userRoles.user }}")
            | Normal user
    .control-group
        .controls
            button.btn(type="submit") Submit
